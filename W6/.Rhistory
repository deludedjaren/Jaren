# Function to simulate a rocket launch countdown
countdown <- function() {
count <- 10
while (count >= 1) {
cat("Countdown:", count, "\n")
Sys.sleep(1)  # Pause for one second
count <- count - 1
}
cat("Blastoff!\nRocket has launched!\n")
}
# Call the countdown function
countdown()
